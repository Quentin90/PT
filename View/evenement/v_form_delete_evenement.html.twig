{% extends "v_layout.html.twig" %}

{% block contenu %}
	<form method="post" action="{{ path('evenement.validFormDelete') }}">
		<div class="row">

			<fieldset>
				<input name="id"  type="hidden" value="{{ id }}"/>

				<label>Etes-vous sur de vouloir supprimer l'evenement d'identifiant {{ id }} ?
				</label>

				<input type="hidden" id="_method" name="_method" value="DELETE" />
				<input type="submit" name="Supprimer" value="Supprimer" />

			</fieldset>
		</div>
	</form>
{% endblock %}